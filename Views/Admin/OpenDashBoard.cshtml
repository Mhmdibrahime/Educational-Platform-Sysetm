@model EducationalPlatform1._0.Models.ViewModels.TeacherViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link rel="stylesheet"
          href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
</head>
<body>
    <div class="loader"></div>
    <div class="hidden">
        <!-- <header>
          <h1>Admin Panel</h1>
        </header> -->
        <div class="flex" id="flex">
            <div class="navbar1" id="navbar1">
                <div class="logo">
                    <div class="image">
                        <img src="~/images/book-light.svg" id="book">
                    </div>
                    <div class="title">
                        <p>Storm's End</p>
                    </div>
                </div>
                <div class="links">
                    <p class="d-inline-flex">
                        <a class="students " data-bs-toggle="collapse" href="#multiCollapseExample1" aria-expanded="false" aria-controls="multiCollapseExample1">
                            <div class="title-links">
                                <div class="data">
                                    <img src="~/images/users-solid (1).svg" id="students">
                                    <p> Students</p>
                                </div>
                                <!-- <div class="plus">+</div> -->
                            </div>
                        </a>
                    </p>
                    <div class="row">
                        <div class="col">
                            <div class="collapse multi-collapse" id="multiCollapseExample1">
                                <div class="content">
                                    Show/Delete Students <br>
                                    <a asp-action="OpenDashboard" asp-controller="Admin"> <div class="btn">Click</div> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p class="d-inline-flex">
                        <a class="students " data-bs-toggle="collapse" href="#multiCollapseExample10" aria-expanded="false" aria-controls="multiCollapseExample10">
                            <div class="title-links">
                                <div class="data">
                                    <img src="~/images/users-solid (1).svg" id="students">
                                    <p> Teachers</p>
                                </div>
                                <!-- <div class="plus">+</div> -->
                            </div>
                        </a>
                    </p>
                    <div class="row">
                        <div class="col">
                            <div class="collapse multi-collapse" id="multiCollapseExample10">
                                <div class="content">
                                    Show/Delete Students <br>
                                    <a asp-action="TeachersDetails" asp-controller="Admin"> <div class="btn">Click</div> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    @* <p class="d-inline-flex">
                        <a class="quiz" data-bs-toggle="collapse" href="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">
                            <div class="title-links d-flex">
                                <div class="data">
                                    <img src="~/images/book-solid (1).svg" id="quiz">
                                    <p> Quiz</p>
                                </div>
                                <!-- <div class="plus">+</div> -->
                            </div>
                        </a>
                    </p>
                    <div class="row">
                        <div class="col">
                            <div class="collapse multi-collapse" id="multiCollapseExample2">
                                <div class="content">
                                    Add Quizzes <br>

                                    <a asp-action="AddQuiz" asp-controller="Teacher"> <div class="btn mt-0">Add Quiz </div> </a>
                                </div>
                            </div>
                        </div>
                    </div> *@
                    <!-- <p class="d-inline-flex">
                      <a class="quiz" data-bs-toggle="collapse" href="#multiCollapseExample3" aria-expanded="false" aria-controls="multiCollapseExample3">
                        <div class="title-links d-flex">
                          <div class="data">
                          <img src="~/images/readme (1).svg" id="course">
                           <p>Courses</p>
                          </div>
                            <div class="plus">+</div>
                        </div>
                      </a>
                    </p>
                    <div class="row">
                      <div class="col">
                        <div class="collapse multi-collapse" id="multiCollapseExample3">
                          <div class="content">
                              Update/Delete Course <br>
                              <div class="btn">Update</div> <br>
                              <div class="btn mt-0">Delete</div>
                          </div>
                        </div>
                      </div>
                    </div> -->
                   
                        <p class="d-inline-flex">
                            <a class="quiz" data-bs-toggle="collapse" href="#multiCollapseExample5" aria-expanded="false" aria-controls="multiCollapseExample5">
                                <div class="title-links d-flex">
                                    <div class="data">
                                        <img src="~/images/user.svg" id="teacher">
                                        <p>Teacher</p>
                                    </div>
                                    <!-- <div class="plus">+</div> -->
                                </div>
                            </a>
                        </p>
                        <div class="row">
                            <div class="col">
                                <div class="collapse multi-collapse" id="multiCollapseExample5">
                                    <div class="content">
                                        Add Teachers<br>
                                        <a asp-action="AddTeacher" asp-controller="Admin"> <div class="btn">Add Teacher</div> </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                    <p class="d-inline-flex">
                        <a class="quiz" data-bs-toggle="collapse" href="#multiCollapseExample4" aria-expanded="false" aria-controls="multiCollapseExample4">
                            <div class="title-links d-flex">
                                <div class="data">
                                    <img src="~/images/about-us.svg" id="feedback">
                                    <p>FeedBack</p>
                                </div>
                                <!-- <div class="plus">+</div> -->
                            </div>
                        </a>
                    </p>
                    <div class="row">
                        <div class="col">
                            <div class="collapse multi-collapse" id="multiCollapseExample4">
                                <div class="content">
                                    Show FeedBack <br>
                                    <a asp-action="SeeFeedBacks" asp-controller="Teacher"> <div class="btn">Feedback</div> </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p class="d-inline-flex">
                        <a asp-action="Logout"
                           asp-controller="Account"
                           class="quiz">
                            <div class="title-links d-flex">
                                <div class="data">
                                    <img src="~/images/person-walking-arrow-right-solid (1).svg" id="logout" style="width: 35px;" />
                                    <p>Log Out</p>
                                </div>
                                <!-- <div class="plus">+</div> -->
                            </div>
                        </a>
                    </p>
                </div>
            </div>
            <div class="container1">
                <div class="admin-info">
                    <div class="data">
                        <div class="info">
                            <img src="@Model.Image"
                                 alt="Admin Photo"
                                 width="150"
                                 height="150"
                                 class="Admin-Photo" />
                            <div class="content">
                                <strong><p>Name:</strong> @Model.Name</p>
                                <strong> <p>Email:</strong> @Model.Email</p>
                                <strong> <p>Phone: </strong>@Model.Phone</p>
                                <div class="icon">
                                    <img src="~/images/search.svg" />
                                    <input type="text" placeholder="Search" />
                                    <!-- <img src="~/~/images/moon.svg" class="moon" /> -->
                                    <!-- <img src="~/images/bars.svg" style="width:30px" class="bars"> -->

                                </div>
                            </div>
                        </div>
                        <div class="icon">
                            <img src="~/images/search.svg" />
                            <input type="text" placeholder="Search" />
                            <img src="~/images/moon.svg" class="moon" />
                            <img src="~/images/bars.svg" style="width:30px" class="bars" id="bars">
                        </div>
                    </div>
                </div>
                <table>
                    <tr>
                        <th>Name</th>
                        <th>Number</th>
                        <th>Level</th>
                        <th></th>
                        <th></th>

                    </tr>
                    @foreach (var student in Model.students)
                    {
                        <tr>
                            <td class="col">@student.FirstName @student.LastName</td>
                            <td>@student.Phone</td>
                            <td>@student.Level</td>
                            <td><a asp-action="DeleteStudent" asp-controller="Admin" asp-route-id="@student.Id"><button>Delete</button></a></td>
                            <td><a asp-action="Report" asp-controller="Admin" asp-route-id="@student.Id"><button>Report</button></a> </td>

                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="~/js/admin.js"></script>
    <script src="~/js/navbar.js"></script>
</body>
</html>
