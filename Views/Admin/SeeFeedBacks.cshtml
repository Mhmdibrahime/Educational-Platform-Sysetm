@model EducationalPlatform1._0.Models.ViewModels.FeedBackViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Feedback</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/feedback-admin.css" />
    <link rel="stylesheet" href="~/css/navbar.css" />
</head>
<body>
    <div class="loader"></div>
    <div class="flex hiddenloader" id="flex">
        <div class="navbar1" id="navbar1">
            <div class="logo">
                <div class="image">
                    <img src="~/images/book-light.svg" id="book" />
                </div>
                <div class="title">
                    <p>Storm's End</p>
                </div>
            </div>
            <div class="links">
                <p class="d-inline-flex">
                    <a class="students"
                       data-bs-toggle="collapse"
                       href="#multiCollapseExample1"
                       aria-expanded="false"
                       aria-controls="multiCollapseExample1">
                        <div class="title-links">
                            <div class="data">
                                <img src="~/images/users-solid (1).svg" id="students" />
                                <p>Students</p>
                            </div>
                            <!-- <div class="plus">+</div> -->
                        </div>
                    </a>
                </p>
                <div class="row">
                    <div class="col">
                        <div class="collapse multi-collapse" id="multiCollapseExample1">
                            <div class="content">
                                Show/Delete Students <br />
                                <a asp-action="OpenDashboard" asp-controller="Admin"> <div class="btn">Click</div> </a>
                            </div>
                        </div>
                    </div>
                </div>
                <p class="d-inline-flex">
                    <a class="students " data-bs-toggle="collapse" href="#multiCollapseExample10" aria-expanded="false" aria-controls="multiCollapseExample10">
                        <div class="title-links">
                            <div class="data">
                                <img src="~/images/users-solid (1).svg" id="students">
                                <p> Teachers</p>
                            </div>
                            <!-- <div class="plus">+</div> -->
                        </div>
                    </a>
                </p>
                <div class="row">
                    <div class="col">
                        <div class="collapse multi-collapse" id="multiCollapseExample10">
                            <div class="content">
                                Show/Delete Students <br>
                                <a asp-action="TeachersDetails" asp-controller="Admin"> <div class="btn">Click</div> </a>
                            </div>
                        </div>
                    </div>
                </div>
                @* <p class="d-inline-flex">
                    <a class="quiz"
                       data-bs-toggle="collapse"
                       href="#multiCollapseExample2"
                       aria-expanded="false"
                       aria-controls="multiCollapseExample2">
                        <div class="title-links d-flex">
                            <div class="data">
                                <img src="~/images/book-solid (1).svg" id="quiz" />
                                <p>Quiz</p>
                            </div>
                            <!-- <div class="plus">+</div> -->
                        </div>
                    </a>
                </p>
                <div class="row">
                    <div class="col">
                        <div class="collapse multi-collapse" id="multiCollapseExample2">
                            <div class="content">
                                Add Quizzes/Questions <br />

                                <a asp-action="AddQuiz" asp-controller="Teacher">
                                    <div class="btn mt-0">Quiz</div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div> *@
                <p class="d-inline-flex">
                    <a class="quiz"
                       data-bs-toggle="collapse"
                       href="#multiCollapseExample3"
                       aria-expanded="false"
                       aria-controls="multiCollapseExample3">
                        <!-- <div class="title-links d-flex">
                              <div class="data">
                                <img src="~/images/readme (1).svg" id="course" />
                                <p>Courses</p>
                              </div>
                              <div class="plus">+</div>
                            </div>
                          </a>
                        </p>
                        <div class="row">
                          <div class="col">
                            <div class="collapse multi-collapse" id="multiCollapseExample3">
                              <div class="content">
                                Update/Delete Course <br />
                                <div class="btn">Update</div>
                                <br />
                                <div class="btn mt-0">Delete</div>
                              </div>
                            </div>
                          </div>
                        </div> -->
                        <p class="d-inline-flex">
                            <a class="quiz"
                               data-bs-toggle="collapse"
                               href="#multiCollapseExample5"
                               aria-expanded="false"
                               aria-controls="multiCollapseExample5">
                                <div class="title-links d-flex">
                                    <div class="data">
                                        <img src="~/images/user.svg" id="teacher" />
                                        <p>Teachers</p>
                                    </div>
                                    <!-- <div class="plus">+</div> -->
                                </div>
                            </a>
                        </p>
                        <div class="row">
                            <div class="col">
                                <div class="collapse multi-collapse" id="multiCollapseExample5">
                                    <div class="content">
                                        Add Teachers<br />
                                        <a asp-action="AddTeacher" asp-controller="Admin"> <div class="btn">Add Teacher</div> </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p class="d-inline-flex">
                            <a class="quiz"
                               data-bs-toggle="collapse"
                               href="#multiCollapseExample4"
                               aria-expanded="false"
                               aria-controls="multiCollapseExample4">
                                <div class="title-links d-flex">
                                    <div class="data">
                                        <img src="~/images/about-us.svg" id="feedback" />
                                        <p>FeedBack</p>
                                    </div>
                                    <!-- <div class="plus">+</div> -->
                                </div>
                            </a>
                        </p>
                        <div class="row">
                            <div class="col">
                                <div class="collapse multi-collapse"
                                     id="multiCollapseExample4">
                                    <div class="content">
                                        Show FeedBack <br />
                                        <a asp-action="SeeFeedBacks" asp-controller="Admin">
                                            <div class="btn">See Feedbacks</div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </p>
                <p class="d-inline-flex">
                    <a asp-action="Logout"
                       asp-controller="Account"
                       class="quiz">
                        <div class="title-links d-flex">
                            <div class="data">
                                <img src="~/images/person-walking-arrow-right-solid (1).svg" id="logout" style="width: 35px;" />
                                <p>Log Out</p>
                            </div>
                            <!-- <div class="plus">+</div> -->
                        </div>
                    </a>
                </p>
            </div>
        </div>
        <div class="container1">
            <img src="~/images/bars.svg" id="bars" class="bars" style="width:30px" />
            <h1>Feedback Data</h1>
            <div class="table-wrapper">
                <table id="feedbackTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Experience</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var feedback in Model.Feedbacks)
                        {
                            <tr>
                                <td>@feedback.Id</td>
                                <td>@feedback.FName @feedback.LName</td>
                                <td>@feedback.Email</td>
                                <td>@feedback.Rating</td>
                                <td>
                                    <label class="message-label">
                                        <button type="button"
                                                class="btn click"
                                                data-bs-toggle="modal"
                                                data-bs-target="#exampleModal1">
                                            Click To Read
                                        </button>
                                        <div class="modal fade"
                                             id="exampleModal1"
                                             tabindex="-1"
                                             aria-labelledby="exampleModalLabel"
                                             aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h1 class="modal-title fs-5" id="exampleModalLabel">
                                                            Message
                                                        </h1>
                                                        <button type="button"
                                                                class="btn-close"
                                                                data-bs-dismiss="modal"
                                                                aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        @feedback.FeedBack
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button"
                                                                class="btn close"
                                                                data-bs-dismiss="modal">
                                                            Close
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </label>
                                    <!-- <p class="message hidden">Great learning experience!</p> -->
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tbody id="feedbackTableBody"></tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script>
        let loader = document.querySelector(".loader");
        let hidden = document.querySelector(".hiddenloader");

        setTimeout(function () {
            loader.style.display = "none";
            document.body.classList.add("appear");
            hidden.classList.add("appear");
        }, 2000);
    </script>

    <script src="~/js/navbar.js"></script>
</body>
</html>
