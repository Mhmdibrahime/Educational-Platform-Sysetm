
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>teacher 2</title>
    <link rel="stylesheet"
          href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />

    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/teacher 2.css" />
</head>
<body>
    <div class="loader"></div>
    <div class="hidden">
        <header id="header">
            <div class="welcome container">
                <div class="logo">
                    <img src="~/images/book.svg" id="book" />
                    <p>Storm's End</p>
                </div>
                <nav>
                    <ul>
                        
                        <li><a href="#about">Home</a></li>
                        <li><a href="#courses">Courses</a></li>
                       
                        <li><a href="#footer"> Contact Us</a></li>
                        @if (User.Identity.IsAuthenticated == true)
                        {
                            <li><a asp-action="Months" asp-controller="Home">Months</a></li>
                            <li>
                                <a asp-action="Profile" asp-controller="User">
                                    <img src="~/images/user-solid (1).svg" id="user" />
                                </a>
                                <span style="font-weight: bold"> Welcome @User.Identity.Name </span>
                            </li>

                        }
                        else
                        {
                            <li><a href="#subscribe">Join Us</a></li>
                            <li id="btn-login"><a asp-action="Login" asp-controller="Account">Login</a></li>
                            <li id="btn-register"><a asp-action="Register" asp-controller="Account">Register</a></li>
                        }
                        <li>
                            <img src="~/images/moon.svg" id="moon" />
                            <img src="~/images/search.svg" id="search" />
                            <img id="navbar" src="~/images/bars.svg" />
                        </li>
                    </ul>
                </nav>
            </div>
        </header>

        <div class="container">

            <div class="sidebar" id="sidebar">
                <ul>
                    
                    <li><a href="#about"> <img src="~/images/house.svg"> Home</a></li>
                    <li><a href="#courses"> <img src="~/images/about-us.svg"> Courses</a></li>
 
                    <li><a href="#footer"> <img src="~/images/phone.svg"> Contact Us</a></li>
                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <li id="login_ul"><a asp-action="Login" asp-controller="Account"> <img src="~/images/user.svg"> Login</a></li>
                        <li id="register_ul"><a asp-action="Register" asp-controller="Account"> <img src="~/images/registered.svg"> Register</a></li>
                        <li><a href="#subscribe"> <img src="~/images/about-us.svg"> Join Us</a></li>
                    }
                    else
                    {
                        <li>
                            <a asp-action="Profile" asp-controller="User">
                                <img src="~/images/user-solid (1).svg" id="user" />
                            </a>
                            <span style="font-weight: bold"> Welcome @User.Identity.Name </span>
                        </li>
                    }

            </div>
        </div>
        <div class=" about" id="about">
            <div class="background" id="background">
                <div class="container about-container">
                    <div class="content">
                        <p>Welcome to <span>Storm's End </span> Platform with mr/ Ahmed Mohamed</p>
                        <p>Ahmed Mohamed is not just a programming teacher; he is a beacon of knowledge, guidance, and inspiration in the world of coding education. With his unwavering passion for programming and dedication to his students' success, Abdelkader has earned a reputation as an exceptional educator.</p>
                    </div>

                    <div class="image">
                        <img src="~/images/teacher1.jpg" alt="Image">
                    </div>
                </div>
            </div>
        </div>
        <div class="courses container" id="courses">
            <h1>Free Courses</h1>
            <div class="level-container container">
                <div class="level-square">
                    <img src="~/images/content5.jpg">
                    <div class="levels">
                        <h3>Level 1</h3>
                        <p>
                            Lorem ipsum dolor sit amet consectetur adipisicing elit.
                            Numquam mollitia officiis beatae fuga doloremque dolorum,
                        </p>
                        <button type="button" class="btn watched" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            For Watching
                        </button>
                    </div>
                </div>
                <div class="level-square">
                    <img src="~/images/content4.jpg">
                    <div class="levels">
                        <h3>Level 2</h3>
                        <p>
                            Lorem ipsum dolor sit amet consectetur adipisicing elit.
                            Numquam mollitia officiis beatae fuga doloremque dolorum,
                        </p>
                        <button type="button" class="btn watched" data-bs-toggle="modal" data-bs-target="#exampleModal1">
                            For Watching
                        </button>
                    </div>
                </div>
                <div class="level-square">
                    <img src="~/images/content3.jpg">
                    <div class="levels">
                        <h3>Level 3</h3>
                        <p>
                            Lorem ipsum dolor sit amet consectetur adipisicing elit.
                            Numquam mollitia officiis beatae fuga doloremque dolorum,
                        </p>
                        <button type="button" class="btn watched" data-bs-toggle="modal" data-bs-target="#exampleModal2">
                            For Watching
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="subscribe" id="subscribe">
            <h1>Join With Us</h1>
            <div class="info container">
                <div class="photo">
                    <img src="~/images/book1.png">
                </div>
                <div class="text">
                    <p>His deep understanding of various programming languages, coupled with his ability to explain complex concepts in a clear and accessible manner, makes him an invaluable asset to his students. Whether teaching the basics of Python or delving into advanced topics like machine learning, Abdelkader ensures that every student grasps the material at their own pace.</p>

                    <p>In the eyes of his students, Abdelkader is more than just a teacher; he is a mentor, a role model, and a friend. His impact extends far beyond the classroom, shaping the future of countless aspiring programmers who are inspired by his passion, expertise, and unwavering support.</p>
                    @if (User.IsInRole("Student"))
                    {
                        <button> <a asp-action="Pay" asp-controller="User"> More Courses </a> </button>
                    }
                    else
                    {
                        <button> <a asp-action="Months" asp-controller="Home"> More Courses </a> </button>
                    }
                </div>
            </div>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog  modal-dialog-centered  modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Level One</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="video">
                            <video id="videoPlayer" controls>
                                <source id="videoSource" src="~/vidoes/1.mp4" type="video/mp4">
                            </video>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn watched" data-bs-dismiss="modal">Watched</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel1" aria-hidden="true">
            <div class="modal-dialog  modal-dialog-centered  modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Level Two</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="video">
                            <video id="videoPlayer" controls>
                                <source id="videoSource" src="~/vidoes/2.mp4" type="video/mp4">
                            </video>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn watched" data-bs-dismiss="modal">Watched</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel2" aria-hidden="true">
            <div class="modal-dialog  modal-dialog-centered  modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Level Three</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="video">
                            <video id="videoPlayer" controls>
                                <source id="videoSource" src="~/vidoes/3.mp4" type="video/mp4">
                            </video>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn watched" data-bs-dismiss="modal">Watched</button>
                    </div>
                </div>
            </div>
        </div>
        <footer id="footer">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Contact us</h3>

                    <ul>
                        <li>  <img src="~/images/right.svg" class="footer-arrow"> Kafr el-sheikh</li>
                        <li>  <img src="~/images/right.svg" class="footer-arrow">  Egypt</li>
                        <li>  <img src="~/images/right.svg" class="footer-arrow">  +201013706142</li>
                        <li>  <img src="~/images/right.svg" class="footer-arrow"> abdelkadermoamed@gmail.com</li>
                    </ul>
                </div>

                <div class="footer-section">
                    <h3>Follow us</h3>
                    <div class="social-icons">
                        <a href="#" target="arrow">
                            <img src="~/images/facebook.png" alt="Facebook" />
                        </a>

                        <a href="#" target="_blank">
                            <img src="~/images/instagram.png" alt="Instagram" />
                        </a>

                        <a href="#" target="_blank">
                            <img src="~/images/youtube.png" alt="youtube" />
                        </a>

                        <a href="#" target="_blank">
                            <img src="~/images/twitter.png" alt="twitter" />
                        </a>

                        <a href="#" target="_blank">
                            <img src="~/images/whatsapp.png" alt="WhatsApp" />
                        </a>
                    </div>
                </div>
            </div>
        </footer>
       
    </div>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/jquery-3.7.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="~/js/teacher 1.js"></script>
</body>
</html>
