@model EducationalPlatform1._0.Models.ViewModels.ProfileViewModel;

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
    <link rel="stylesheet"
          href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>
    <div class="loader"></div>
    <div class="hidden">
        <header>
            <h1>Teacher Panel</h1>
        </header>
        <div class="container">
            <div class="admin-info">
                <div class="data">
                    <div class="info">
                        <img src="@Model.ImagePath"
                             alt="Admin Photo"
                             width="150"
                             height="150" />
                        <div class="content">
                            <strong><p>Name:</strong> @Model.Name</p>
                            <strong> <p>Email:</strong> @Model.Email</p>
                            <strong> <p>Phone: </strong>@Model.PhoneNumber</p>
                            <div class="icon">
                                <img src="~/images/search.svg" />
                                <input type="text" placeholder="Search" />
                                
                                <a asp-action="AddQuiz" asp-controller="Teacher"><button>Add Quiz</button></a>
                                <a asp-action="SeeFeedBacks" asp-controller="Teacher"><button>See FeedBacks</button></a>
                                <a asp-action="Logout" asp-controller="Account"> <button class="log-out">Logout</button></a>

                                <img src="~/images/moon.svg" class="moon" />
                            </div>
                        </div>
                    </div>
                    <div class="icon">
                        <img src="~/images/search.svg" />
                        <input type="text" placeholder="Search" />
                        
                        <a asp-action="AddQuiz" asp-controller="Teacher"><button>Add Quiz</button></a>
                        <a asp-action="SeeFeedBacks" asp-controller="Teacher"><button>See FeedBacks</button></a>
                        <a asp-action="Logout" asp-controller="Account"> <button class="log-out">Logout</button></a>


                        <img src="~/images/moon.svg" class="moon" />
                    </div>
                </div>
            </div>
            <table>
                <tr>
                    <th>Name</th>
                    <th>Number</th>
                    <th>Level</th>
                    <th></th>
                    <th></th>

                </tr>
                @foreach (var student in Model.students)
                {
                    <tr>
                        <td class="col">@student.FirstName @student.LastName</td>
                        <td>@student.Phone</td>
                        <td>@student.Level</td>
                        <td><a asp-action="DeleteStudent" asp-controller="Teacher" asp-route-id="@student.Id"><button>Delete</button></a></td>
                        <td><a asp-action="Report" asp-controller="Teacher" asp-route-id ="@student.Id"><button>Report</button></a> </td>

                    </tr>
                }
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="~/js/admin.js"></script>
</body>
</html>


